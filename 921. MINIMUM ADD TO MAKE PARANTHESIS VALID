class Solution {
public:
    int minAddToMakeValid(string s) {
        int b=0;
        int u=0;
        for(char c:s){
            if(c=='(')
            {
                b++;
            }
            else {
                if(b>0)
                {
                b--;
               }
            else{

            u++;
        }
    }
}
        return u+b;
    }
};
